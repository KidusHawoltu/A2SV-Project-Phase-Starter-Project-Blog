{
  "info": {
    "name": "A2SV Blog Platform API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman tests for all A2SV Blog Platform routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@1234\"\n}"
            }
          }
        },
        {
          "name": "Activate Account",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/auth/activate?token=ACTIVATION_TOKEN"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@1234\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();",
                  "if (jsonData.accessToken) {",
                  "    pm.environment.set(\"accessToken\", jsonData.accessToken);",
                  "    console.log(\"Access Token saved to environment\");",
                  "}",
                  "if (jsonData.refreshToken) {",
                  "    pm.environment.set(\"refreshToken\", jsonData.refreshToken);",
                  "    console.log(\"Refresh Token saved to environment\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },

        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/auth/refresh",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Password",
      "item": [
        {
          "name": "Forget Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/password/forget",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/v1/password/reset",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"RESET_TOKEN\",\n  \"newPassword\": \"NewPass@123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updatedUser\",\n  \"bio\": \"Updated bio\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/admin/users?search=test"
          }
        },
        {
          "name": "Set User Role",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/admin/users/12345/role",
            "body": { "mode": "raw", "raw": "{\n  \"role\": \"admin\"\n}" }
          }
        }
      ]
    },
    {
