        },
        {
          "name": "Get Blog Comments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/blogs/12345/comments"
          }
        },
        {
          "name": "Add Blog Comment",
          "request": {
            "method": "POST",
